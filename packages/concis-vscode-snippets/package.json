{
  "name": "concis-snippets",
	"displayName": "concis-snippets",
	"description": "concis snippets for vscode",
  "version": "0.1.2",
	"publisher": "fengxin",
	"icon": "src/logo.png",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other",
		"Snippets"
	],
	"activationEvents": [
	"*"
	],
	"main": "./dist/extension.js",
	"repository": {
    "type": "git",
    "url": "https://github.com/fengxinhhh/Concis"
  },
  "bugs": {
    "url": "https://github.com/fengxinhhh/Concis/issues"
  },
	"contributes": {
		"snippets": [
      {
        "language": "javascript",
        "path": "./snippets.json"
      },
			{
        "language": "typescript",
        "path": "./snippets.json"
      },
			{
        "language": "javascriptreact",
        "path": "./snippets.json"
      },
			{
        "language": "typescriptreact",
        "path": "./snippets.json"
      }
    ]
	},
	"scripts": {
		"upgrade": "node ../../scripts/replace-version-in-vscode.ts",								
		"compile": "rollup -c ./rollup.config.js",																
		"build": "vsce package",																										
		"generate:readme": "node ../../scripts/vscode/generate-vscode-snippet.ts",		
		"publish": "npm run upgrade && npm run generate:readme && npm run compile && npm run build && vsce publish"								
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"glob": "^8.0.3",
		"typescript": "^4.7.4",
		"ts-loader": "^9.3.1",
		"@vscode/test-electron": "^2.1.5"
	}
}
