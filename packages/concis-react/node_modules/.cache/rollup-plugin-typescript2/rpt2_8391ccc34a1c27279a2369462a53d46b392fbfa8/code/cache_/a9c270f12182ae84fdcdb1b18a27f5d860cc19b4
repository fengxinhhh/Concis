{"code":"import React, { memo, useCallback, useContext } from 'react';\r\nimport { globalCtx } from '../GlobalConfig';\r\nimport { CheckOutlined } from '@ant-design/icons';\r\nimport './index.module.less';\r\nconst Steps = (props) => {\r\n    const { current, children } = props;\r\n    const { globalColor } = useContext(globalCtx);\r\n    const indexClassName = useCallback((index) => {\r\n        if (index == current) {\r\n            return 'active-index';\r\n        }\r\n        else if (index > current) {\r\n            return 'after-index';\r\n        }\r\n        else if (index < current) {\r\n            return 'before-index';\r\n        }\r\n        return 'before-index';\r\n    }, [current]);\r\n    return (React.createElement(\"div\", { className: \"steps\", style: { '--global-color': globalColor || '#1890ff' } },\r\n        React.createElement(\"div\", { className: \"step-content\" },\r\n            React.createElement(\"div\", { className: \"step-line\" }, children.map((step, index) => {\r\n                return (React.createElement(\"div\", { className: \"step-box\", key: index },\r\n                    index + 1 < current ? (React.createElement(\"div\", { className: indexClassName(index + 1) },\r\n                        React.createElement(CheckOutlined, null))) : (React.createElement(\"span\", { className: indexClassName(index + 1) }, index + 1)),\r\n                    React.createElement(\"div\", { className: \"sub-content\" },\r\n                        React.createElement(\"div\", { className: \"top\" },\r\n                            React.createElement(\"span\", { className: \"title\", style: index + 1 > current ? { color: '#999999' } : { color: '#000000' } }, step.props.title),\r\n                            React.createElement(\"span\", { className: \"sub-title\" }, step.props.subTitle)),\r\n                        React.createElement(\"div\", { className: \"bottom\", style: index + 1 !== current ? { color: '#999999' } : { color: '#000000' } }, step.props.description))));\r\n            })))));\r\n};\r\nexport default memo(Steps);\r\n","references":["/Users/apple/Desktop/react-view-ui/node_modules/@types/react/index.d.ts","/Users/apple/Desktop/react-view-ui/packages/concis-react/src/GlobalConfig/interface.ts","/Users/apple/Desktop/react-view-ui/packages/concis-react/src/GlobalConfig/index.tsx","/Users/apple/Desktop/react-view-ui/node_modules/@ant-design/icons/lib/index.d.ts"]}
